{
  "python.linting.enabled": false,
  "python.linting.pylintEnabled": false,
  "python.linting.banditEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.pydocstyleEnabled": false,
  "python.linting.pycodestyleEnabled": false,
  "python.linting.mypyEnabled": false,
  "python.testing.pytestArgs": ["src"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.linting.flake8Args": [
    "exclude __init__.py",
    "--ignore=E402,F841,F403,F405"
  ],
  "editor.rulers": [95],
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#3a4dbd"
    // "titleBar.activeBackground": "#0a426c"
  },
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.currentLine.format": "${author, }${agoOrDate}${' via 'pullRequest}${ â€¢ message|50?}",
  "gitlens.codeLens.enabled": false,
  "gitlens.hovers.enabled": false,
  "editor.formatOnSave": true,

  "python.formatting.provider": "black",
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": false
    }
  },

  "python.formatting.blackArgs": ["-l", "79"],
  "python.analysis.logLevel": "Trace",
  "grammarly.selectors": [
    {
      "language": "python",
      "scheme": "file",
      "pattern": "online_school/swagger_responses/accounts_responses/common_responses.py"
    }
  ],
  "python.analysis.typeCheckingMode": "off",
  "pythonEasyPrint.prints.printToNewLine": false,
  "search.quickOpen.includeHistory": false,
  "flake8.args": ["--max-line-length=95"],
  "workbench.editor.enablePreview": true,
  "code-runner.customCommand": "source /home/ahzam/Downloads/BackendDevelopement/backendenv/bin/activate && python3 src/manage.py runserver",
  "code-runner.cwd": "."
}
