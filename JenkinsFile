def img
pipeline{
    agent any
    environment{
        dockerImage = ''
    }
    stages{
        stage("STAGE 1 : Build Checkout"){
            steps{
                git "https://github.com/AhzamAhmed6/online_school.git"
            }
        }
        
        stage("STAGE 2 : Docker Compose Build"){
            steps{
                bat "docker-compose build"
            }
        }
        
        stage("STAGE 3 : Run Pytest Using Docker Compose"){
            steps{
                bat "docker-compose run --rm my_awsome_app pytest"
            }
        }
        stage("STAGE 4 : Flake8 Test"){
            steps{
                bat "docker-compose run --rm my_awsome_app flake8"
            }
        }
        stage("STAGE 5 : EMAIL NOTIFICATION"){
            mail bcc: '', body: 'Build success' , cc: '', subject: 'Build Success', to: 'ahzamahmed6@gmail.com'
        }
        
    }
}
// $PROJECT_NAME - Build # $BUILD_NUMBER - $BUILD_STATUS!

// $PROJECT_NAME - Build # $BUILD_NUMBER - $BUILD_STATUS:

// Check console output at $BUILD_URL to view the results.